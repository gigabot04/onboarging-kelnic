extends ../base/layout

block variables
  - var title = "Тестовое задание"

block main
  main.main.container
    .lists
      h1.lists__text Квартиры
      .table
        ul.table__header
          li.table__desk
            p.table__col Планировка
          li.table__desk
            p.table__col Квартира
          li
            button.table__col.table__btn(type="button") S, м²
          li
            button.table__col.table__btn(type="button") Этаж
          li
            button.table__col.table__btn(type="button") Цена, ₽
        ul.table__body
          template#table__item
            li.table__item
              +icon("plan", 66, 63).table__icon
              p.table__col.table__flat
              p.table__col.table__squares
              p.table__col.table__floor
                span.table__col-span.table__floors из
              p.table__col.table__price
        button.table__load-btn(type="button") Загрузить еще
    .form
      form(action="#")
        fieldset
          input.visually-hidden#1k(type="checkbox", name="1k")
          label(for="1k") 1к
          input.visually-hidden#2k(type="checkbox", name="1k")
          label(for="2k") 2к
          input.visually-hidden#3k(type="checkbox", name="1k")
          label(for="3k") 3к
          input.visually-hidden#4k(type="checkbox", name="1k", disabled)
          label(for="4k") 4к
        fieldset
          h2 Стомость квартиры, ₽
          label(for="price-flat1") от
          input#price-flat1(type="number" min="0" max="36000000" value="5500000")
          label(for="price-flat2") до
          input#price-flat2(type="number" min="0" max="36000000" value="18900000")
          div#form-slider1
        fieldset
          h2 Площадь, м²
          label(for="squares-flat1") от
          input#squares-flat1(type="number" min="0" max="250" value="33")
          label(for="squares-flat2") до
          input#squares-flat2(type="number" min="0" max="250" value="123")
          div#form-slider2
        button(type="reset") Сбросить параметры
  button.upbtn
    span.visually-hidden Прокрутить наверх страницы
